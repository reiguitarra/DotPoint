@model DotPonto.Models.Empresas

@{
    ViewData["Title"] = "Editar Registro";
}

<h1>@ViewData["Title"]</h1>

<h4>Empresas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RazaoSocial" class="control-label"></label>
                <input asp-for="RazaoSocial" class="form-control" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndereco" class="control-label"></label>
                <input asp-for="EmpEndereco" class="form-control" />
                <span asp-validation-for="EmpEndereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndNumero" class="control-label"></label>
                <input asp-for="EmpEndNumero" class="form-control" />
                <span asp-validation-for="EmpEndNumero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndBairro" class="control-label"></label>
                <input asp-for="EmpEndBairro" class="form-control" />
                <span asp-validation-for="EmpEndBairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndCidade" class="control-label"></label>
                <input asp-for="EmpEndCidade" class="form-control" />
                <span asp-validation-for="EmpEndCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndUF" class="control-label"></label>
                <input asp-for="EmpEndUF" class="form-control" />
                <span asp-validation-for="EmpEndUF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEndCEP" class="control-label"></label>
                <input asp-for="EmpEndCEP" class="form-control" />
                <span asp-validation-for="EmpEndCEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNAE" class="control-label"></label>
                <input asp-for="CNAE" class="form-control" />
                <span asp-validation-for="CNAE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoMunicipal" class="control-label"></label>
                <input asp-for="InscricaoMunicipal" class="form-control" />
                <span asp-validation-for="InscricaoMunicipal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoEstadual" class="control-label"></label>
                <input asp-for="InscricaoEstadual" class="form-control" />
                <span asp-validation-for="InscricaoEstadual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
