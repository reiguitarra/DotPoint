@model DotPonto.Models.Lotacao

@{
    ViewData["Title"] = "Editar Registro";
}

<h1>@ViewData["Title"]</h1>

<h4>Lotacão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LotId" />
            <div class="form-group">
                <label asp-for="LotNome" class="control-label"></label>
                <input asp-for="LotNome" class="form-control" />
                <span asp-validation-for="LotNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
